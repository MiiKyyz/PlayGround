<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:text="Gender Prediction"
        android:gravity="center"
        android:textColor="#29120b"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:background="@drawable/gender_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Name"
            android:padding="10dp"
            android:textColor="#ffeae6"
            android:textColorHint="#94817e"
            android:background="@drawable/input"
            android:id="@+id/Name_edit" />

        <Button
            android:text="predict"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Predict_btn"
            app:icon="@drawable/predict_gender"

            app:iconTintMode="src_atop"
      />
        <TextView
            android:text="Gender?"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#ffeae6"
            android:layout_height="match_parent"
            android:id="@+id/Display_Predict" />
    </LinearLayout>



</LinearLayout>
